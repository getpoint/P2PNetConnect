<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p2pserver_input_notice"/>
    <EditText
        android:id="@+id/p2p_server_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p2p_local_id_notice"/>
    <EditText
        android:id="@+id/p2p_local_id_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p2p_peer_id_notice"/>
    <EditText
        android:id="@+id/p2p_peer_id_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/p2p_test_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/p2ptest_button" />
</LinearLayout>